  border-radius: 30rpx;
  margin: 15rpx auto;
}
.signatureset .button{
  width: 93%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 15rpx auto;
}
.signatureset .cancel-button{
  width: 40%;
  background-color: #fff;
  color: #000;
  margin: 10rpx auto;
}
.signatureset .add-button{
  width: 40%;
  background-color: #000;
  color: #fff;
  margin: 10rpx auto;
}

