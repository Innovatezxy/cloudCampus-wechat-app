Page{
  width: 100%;
  background: #f4f4f7;
}
/* 添加到我的小程序 */
.tips-box {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 996;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  flex-direction: column;
  width: 650rpx;
}
.tips-arrow {
  width: 0;
  height: 0;
  margin-right: 120rpx;
  border-width: 20rpx;
  border-style: solid;
  border-color:  transparent transparent #fff transparent;
}
.tips-body {
  background-color: #fff;
  box-shadow: 0 10rpx 20rpx -10rpx #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 84rpx;
  padding: 0 25rpx;
  margin-right: 40rpx;
}
.tips-body text {
  color: #000;
  font-size: 28rpx;
  font-weight: bold;
}

/* 顶部皮夫卡 */
.top{
  position: relative;
  margin: 0 auto;
  filter: blur(22px);
  top: 0;
  left: 0;
  z-index: 1;
}
.top image{
  width: 100%;
  height: 100%;
}
.top-bg{
  position: relative;
  border-radius: 20rpx;
  z-index: 9;
}
.top-bg image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.user{
  position: relative;
  border-radius: 20rpx;
  z-index: 99;
}
.useravater{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.avatar{ 
  display: flex;
  width: 120rpx;  
  height: 120rpx;  
  border-radius: 50%;
  overflow: hidden;
  margin-top: 50rpx;
}
.vip{
  position: absolute;
  top: 128rpx;
  right: 300rpx;
}
.vipimg{
  width: 40rpx;
  height: 40rpx;
}
.svip{
  position: absolute;
  top: 16rpx;
  left: 46.5%;
}
.svipimg{
  width: 55rpx;
  height: 55rpx;
}
.location{
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  position: absolute;
  left: 75rpx;
  top: 25rpx;
}
.location-img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 25rpx;
  top: 23rpx;
}
.skin{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 55rpx;
}
.user{
  width: 100%;
  height: 100%;
  text-align: center;
}
.username{
  font-size: 28rpx;
  display: block;
  color: #fff;
  margin-top: 8rpx;
}
.signature{
  width: 93%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  justify-content: center;
}
.signature text{
  color: #fff;
  font-size: 20rpx;
  margin-left: 37rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.penedit{
  width: 25rpx;
  height: 25rpx;
  margin: auto 10rpx;
}
.userinfo{
  display: flex;
  flex-direction: column;
}
.userinfo .list{
  display: flex;
  flex-direction: row;
  flex: 1;
}
.userinfo .items{
  flex: 1;
  text-align: center;
}
.userinfo .list .number{
  color: #fff;
  font-size: 31rpx;
  font-weight: bolder;
}
.userinfo .list .name{
  color: #fff;
  font-size: 30rpx;
  display: block;
  text-align: center; 
}
.loading{
  width: 140rpx;
  height: 35rpx;
}

/* 个性签名设置 */
.signatureset{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.495);
  display: flex;
  z-index: 29;
}
.signatureset-body{
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
