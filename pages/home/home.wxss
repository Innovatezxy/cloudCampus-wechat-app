/* 功能卡 */
.function{
  width: 93%;
  height: auto;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  margin: 40rpx auto;
  background: #fff;
  display: flex;
  flex-flow: column wrap;
  margin-bottom: 20rpx;
}
.function .list{
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  text-align: center;
}
.function .items{
  width: 25%;
  height: 130rpx;
  margin: 10rpx 0;
}
.function .list .img{
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
}
.function .list .text{
  color: #a1a1a1;
  display: block;
  font-size: 25rpx;
}
.unread{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  text-align: center;
  transform: translate(35rpx, -140rpx);
}
.unread image{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
}
.unread text{
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  display: inline-block;
  transform: translate(1rpx, -56rpx);
}

