  flex-direction: row;
  text-align: center;
  padding-top: 20rpx;
}
.title text{
  color: deepskyblue;
  font-size: 32rpx;
  font-weight: 600;
}
.items{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.item{
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
}
.item text{
  color: #000;
