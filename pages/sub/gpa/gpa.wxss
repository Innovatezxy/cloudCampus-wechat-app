.page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.gpa{
  color: #36ab60;
