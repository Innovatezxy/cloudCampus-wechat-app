Page{
  background: #f4f4f7;
  width: 100%;
}
.page{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  padding: 15rpx 0;
}
.title{
  color: crimson;
  font-size: 34rpx;
  font-weight: bold;
  margin-left: 20rpx;
}
.main{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 15rpx 0;
  background: #fff;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.name{
  color: deepskyblue;
  font-size: 32rpx;
  font-weight: bold;
  margin: 15rpx 20rpx;
}
.date{
  color: #36ab60;
  font-size: 32rpx;
  font-weight: bold;
  margin: 15rpx 0;
  margin-left: 330rpx;
}
.body{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.body text{
  color: #797979;
  font-size: 30rpx;
  overflow: hidden;
  margin: 15rpx 20rpx;
}
.line{
  width: 100%;
  height: 3rpx;
  background: #f4f4f7;
}
.copyright{
  font-size: 22rpx;
  color: #a1a1a1;
  text-align: center;
  width: 100%;
  margin: 15rpx auto;
}
