Page{
  background: #f4f4f7;
}
.list{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.items{
  width: 100%;
  line-height: 60rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 25rpx 10rpx;
  align-content: center;
}
.title{
  color: #a1a1a1;
  font-size: 32rpx;
  margin: 15rpx 20rpx;
}
.name{
  color: #000;
  font-size: 32rpx;
  margin: auto 10rpx;
}
.switch{
  position: absolute;
  right: 15rpx;
  margin: auto 5rpx;
}
.line{
  width: 100%;
  height: 3rpx;
  background: #a1a1a1;
}
.button{
  width: 600rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  background-color:  #ea3f49;
  color: white;
  padding: 15rpx 0;
  margin: 30rpx auto;
  border: 3.5rpx solid #464040;
}