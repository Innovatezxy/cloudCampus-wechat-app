Page{
  background: #fff;
}
.info{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.useravater{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.avatar{ 
  display: flex;
  width: 130rpx;  
  height: 130rpx;  
  border-radius: 50%;
  overflow: hidden;
  margin-top: 20rpx;
}
.list{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 30rpx 0;
}
.items{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
}
.line{
  background: #f7f7f9;
  width: 100%;
  padding: 2rpx 0;
}
.name{
  margin: auto 20rpx;
  font-size: 30rpx;
}
.value{
  color: darkslategray;
  font-size: 30rpx;
  position: absolute;
  right: 25rpx;
}
.bind-button{
  width: 600rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  background-color: #ea3f49;
  color: white;
  margin-top: 50rpx;
  padding: 15rpx 0;
  border: 3.5rpx solid #464040;
}