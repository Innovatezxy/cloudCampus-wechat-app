Page{
  background: #fff;
}
.navbar-bg{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 97;
  background: #fff;
}
.navbar-title{
  width: 100%;
  height: 46rpx;
  line-height: 46px;
  text-align: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 98;
  color: #000;
  font-size: 37rpx;
  font-weight: bold;
}
.top{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 35rpx 10rpx;
}
.top-items{
  display: flex;
  flex-direction: column;
  margin: 0 40rpx;
  justify-content: space-around;
}
.avatar{ 
  display: flex;
  width: 130rpx;  
  height: 130rpx;  
  border-radius: 50%;
  overflow: hidden;
  margin: 0 0 0 28rpx;
  border: 3.5rpx solid #464040;
}
.header{
  display: flex;
  flex-direction: row;
}
.name{
  color: #000;
  font-size: 37rpx;
  font-weight: bold;
}
.status{
  color: #666666;
  font-size: 30rpx;
  margin-left: 25rpx;
}
.id{
  color: #4e4e4e;
  font-size: 30rpx;
}
.between-line{
  background: #f7f7f9;
  width: 100%;
  height: 30rpx;
}
.list{
  display: flex;
  background: #fff;
  flex-direction: column;
}
.items{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 10rpx;
}
.img-a{
  width: 50rpx;
  height: 50rpx;
  margin: auto 16rpx;
}
.text{
  font-size: 34rpx;
  margin: auto 18rpx;
}
.img-b{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 10rpx;
}
.contact{
  width: 100%;
  position: absolute;
  bottom: 80rpx;
}
.contact button{
  color: #fff;
  width: 150rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  background: #ea3f49;
  border: 3.5rpx solid #464040;
  margin: 0 auto;
  padding: 10rpx 0;
}
.line{
  background: #f7f7f9;
  width: 88%;
  height: 3rpx;
  margin-left: 12%;
}
.edge-line{
  background: #f7f7f9;
  width: 100%;
  height: 3rpx;
}
.agreement{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 85rpx;
  justify-content: center;
}
.agreement .normal{
  font-size: 27rpx;
  color: #464040;
}
.agreement .blue{
  font-size: 27rpx;
  color: #296aca;
}
.version{
  font-size: 22rpx;
  color: #a1a1a1;
  width: 100%;
  position: absolute;
  bottom: 35rpx;
  text-align: center;
}
.copyright-a{
  font-size: 22rpx;
  color: #a1a1a1;
  width: 100%;
  position: absolute;
  bottom: 5rpx;
  text-align: center;
}
.copyright-b{
  font-size: 22rpx;
  color: #a1a1a1;
  width: 100%;
  position: absolute;
  bottom: 35rpx;
  text-align: center;
}