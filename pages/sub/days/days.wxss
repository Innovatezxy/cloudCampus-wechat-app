Page{
  width: 100%;
  background: #f4f4f7;
}
.page{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.info{
  width: 93%;
  height: 82vh;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 35rpx;
  margin: 30rpx auto 0;
}
.top-info{
  width: 93%;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 30rpx auto;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
}
.top-content{
  width: 100%;
  line-height: 60rpx;
  padding: 15rpx 0;
  color: #000;
  background: #fafafa;
  font-size: 13pt;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.top-days{
  width: 100%;
  line-height: 130rpx;
  padding: 15rpx 0;
  color: #fff;
  background: #ff9797;
  font-size: 33pt;
  font-weight: bolder;
}
.top-unit{
  width: 100%;
  line-height: 60rpx;
  padding: 15rpx 0;
  color: #fff;
  background: #db5858;
  font-size: 15pt;
  font-weight: bolder;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.top-line{
  width: 93%;
  height: 2rpx;
  background: #8a8a8a;
  margin: 5rpx auto;
}
.none{
  width: 90%;
  line-height: 60rpx;
  padding: 15rpx;
  font-size: 20pt;
  text-align: center;
  color: #949494;
  font-weight: bold;
  margin: 100rpx auto;
}
.list{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 20rpx auto;
}
.info-body{
  width: 93%;
  display: flex;
  flex-direction: row;
  margin: 10rpx auto;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
}
.content{
  width: 62%;
  line-height: 60rpx;
  padding: 15rpx;
  color: #000;
  background: #fafafa;
  font-size: 13pt;
  font-weight: 500;
  margin: auto 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.reduct-days{
  width: 28%;
  line-height: 60rpx;
  padding: 15rpx;
  color: #fff;
  font-size: 15pt;
  font-weight: bolder;
  margin: auto 0;
  text-align: center;
  background: #87cefa;
}
.reduct-unit{
  width: 10%;
  line-height: 60rpx;
  padding: 15rpx;
  color: #fff;
  font-size: 15pt;
  font-weight: bolder;
  margin: auto 0;
  text-align: center;
  background: #009dff;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.addup-days{
  width: 28%;
  line-height: 60rpx;
  padding: 15rpx;
  color: #fff;
  font-size: 15pt;
  font-weight: bolder;
  margin: auto 0;
  text-align: center;
  background: #ffa17c;
}
.addup-unit{
  width: 10%;
  line-height: 60rpx;
  padding: 15rpx;
  color: #fff;
  font-size: 15pt;
  font-weight: bolder;
  margin: auto 0;
  text-align: center;
  background: #eb7749;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.tips{
  width: 93%;
  color: #949494;
  font-size: 32rpx;
  text-align: center;
  margin: 15rpx auto;
}
.bottom{
  width: 100%;
  display: flex;
  text-align: center;
  z-index: 1;
  position: absolute;
  bottom: 95rpx;
}
.bottom-add{
  width: 85rpx;
  height: 85rpx;
  margin: auto;
}

/* 日程管理 */
.mgr{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.495);
  display: flex;
  z-index: 89;
}
.mgr-body{
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}
.homeset{
  width: 90%;
  line-height: 60rpx;
  padding: 15rpx;
  text-align: center;
  color: #fff;
  background: #588a58;
  font-size: 15pt;
  font-weight: bold;
  border-radius: 20rpx;
  margin: 20rpx auto;
}
.delete{
  width: 90%;
  line-height: 60rpx;
  padding: 15rpx;
  text-align: center;
  color: #fff;
  background: #b84c4c;
  font-size: 15pt;
  font-weight: bold;
  border-radius: 20rpx;
  margin: 20rpx auto;
}
.cancel{
  width: 90%;
  line-height: 60rpx;
  padding: 15rpx;
  text-align: center;
  color: #fff;
  background: #efc847;
  font-size: 15pt;
  font-weight: bold;
  border-radius: 20rpx;
  margin: 20rpx auto 40rpx;
}
/* 日程添加 */
.add{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.495);
  display: flex;
  z-index: 89;
}
.add-body{
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}
.title{
  color: #000;
  font-size: 25pt;
  font-weight: bolder;
  margin: 15rpx auto;
  text-align: center;
}
.items{
  width: 93%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 15rpx auto;
}
.items-end{
  width: 93%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 15rpx auto;
}
.name{
  width: 20%;
  color: #000;
  font-size: 30rpx;
  font-weight: bolder;
  margin: auto 15rpx;
  text-align: left;
}
.names{
  color: #000;
  font-size: 13pt;
  font-weight: bolder;
  margin: auto 19rpx;
}
.line{
  width: 93%;
  height: 2rpx;
  background: #949494;
  margin: 10rpx auto;
}
.items input{
  color: #000;
  background: #f4f4f7;
  width: 70%;
  line-height: 60rpx;
  font-size: 32rpx;
  text-align: center;
  padding: 17rpx 0;
  border-radius: 30rpx;
}
.picker{
  width: 70%;
  line-height: 60rpx;
  color: #000;
  background: #f4f4f7;
  font-size: 32rpx;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 30rpx;
}
.switch{
  padding: 6rpx;
}
.button{
  width: 93%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 15rpx auto 30rpx;
}
.cancel-button{
  width: 40%;
  background-color: #fff;
  color: #000;
  margin: 10rpx auto;
}
.add-button{
  width: 40%;
  background-color: #000;
  color: #fff;
  margin: 10rpx auto;
}