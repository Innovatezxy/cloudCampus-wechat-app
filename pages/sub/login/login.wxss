page{
  background: #fff;
}
.login{
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.logo{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.logo-text-a{
  font-size: 38rpx;
  color: #000;
  text-align: center;
  margin: 10rpx auto;
}
.logo-text-b{
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}
.infoinput{
  background: #fff;
  width: 500rpx;
  line-height: 60rpx;
  font-size:  35rpx;
  text-align: center;
  margin: 15rpx auto;
  padding: 15rpx 0;
  border-bottom: 3.5rpx solid #777777;
}
.verify{
  background: #fff;
  width: 500rpx;
  height: 85rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 15rpx auto;
}
.verifyinput{
  background: #fff;
  width: 300rpx;
  line-height: 60rpx;
  font-size:  35rpx;
  text-align: center;
  margin: auto 0;
  border-radius: 20rpx;
}
.verifyimg{
  width: 180rpx;
  height: 60rpx;
  margin: auto 10rpx;
}
.account-tips{
  color: #000;
  font-size: 25rpx;
  text-align: center;
  margin-top: 20rpx;
}
.login-button{
  width: 500rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: #ea3f49;
  padding: 10rpx 0;
  margin: 20rpx auto 20rpx;
  border: 3.5rpx solid #777777;
}
.more{
  width: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 5rpx auto;
}
.more text{
  color: #000;
  font-size: 30rpx;
  margin: 10rpx 0;
}
.agreement{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 85rpx;
  justify-content: center;
}
.agreement .normal{
  font-size: 25rpx;
  color: #464040;
}
.agreement .blue{
  font-size: 25rpx;
  color: #296aca;
}
.copyright{
  width: 100%;
  color: #000;
  font-size: 22rpx;
  position: absolute;
  bottom: 35rpx;
  justify-content: center;
}
.customservice-button{
  width: 130rpx;
  color: white;
  background-color: #ea3f49;
  font-size: small;
  margin: 20rpx auto;
  border: 3.5rpx solid #464040;
}