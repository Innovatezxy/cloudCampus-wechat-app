.cropper-wrapper{
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    justify-content: center;
    height: 100%;
    background-color: #e5e5e5;
    z-index: 1;
}

.cropper{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9;
}

.cropper-buttons{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    z-index: 99;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    padding: 0 20rpx;
    box-sizing: border-box;
    line-height: 50px;
}

.tips{
  font-size: 35rpx;
  color: #000;
}

.cropper-buttons .upload{
  line-height: 30px;
  background: #f03030;
  font-size: 35rpx;
  color: #fff;
  text-align: center;
  padding: 10rpx 35rpx;
  border-radius: 15rpx;
  margin: auto 10rpx;
}

.cropper-buttons .getCropperImage{
  line-height: 30px;
  background: #14ad47;
  font-size: 35rpx;
  color: #fff;
  text-align: center;
  padding: 10rpx 35rpx;
  border-radius: 15rpx;
  margin: auto 10rpx;
}
