Page{
  width: 100%;
  background: #f4f4f7;
}
/** 导航栏 **/
.navbar-bg{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 997;
  background: #fff;
}
.navbar-title{
  width: 100%;
  height: 46px;
  line-height: 46px;
  text-align: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 998;
  color: #000;
  font-size: 37rpx;
  font-weight: bold;
}
.navbar{
  width: 20%;
  height: 46px;
  line-height: 46px;
  overflow: hidden;
  position: fixed;
  display: block;
  top: 0;
  left: 0;
  z-index: 999;
}
.back{
  width: 38rpx;
  height: 38rpx;
}
.sharebtn{
  background: none;
  border: none;
  border-radius: 100%;
}
.sharebtn::after{
  border: none;
}
.share{
  width: 38rpx;
  height: 38rpx;
}

/** 主页面 **/
.page{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  width: 60%;
  padding: 15rpx;
  margin: 15rpx auto;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  text-align: center;
}
.top picker{
  color: #000;
  font-size: 32rpx;
  font-weight: blod;
}
.info-score{
  width: 90%;
  height: 280rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  padding: 15rpx 10rpx;
  margin: 15rpx auto 25rpx;
  text-align: center;
  align-content: center;
}
.info-score image, .info-detail image, .info-bmi image, .info-rank image{
  width: 240rpx;
  height: 240rpx;
}
.info-score .body{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.score{
  color: #000;
  font-size: 57pt;
  font-weight: bold;
  margin: auto 15rpx;
}
.details{
  color: #8a8a8a;
  font-size: 30rpx;
}
.info-detail{
  width: 90%;
  height: 280rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  padding: 15rpx 10rpx;
  margin: 25rpx auto;
  align-content: center;
}
.info-detail .eyes{
  width: 48rpx;
  height: 48rpx;
  position: relative;
  top: -25rpx;
  left: 85%;
}
.info-detail .body, .info-bmi .body, .info-rank .body, .info-frdpk .body{
  width: 55%;
  display: flex;
  flex-direction: column;
  margin: auto 15rpx;
}
.title{
  color: #000;
  font-size: 35rpx;
  font-weight: bold;
}
.title-tips{
  color: #8a8a8a;
  font-size: 25rpx;
}
.info-bmi{
  width: 90%;
  height: 280rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  padding: 15rpx 10rpx;
  margin: 20rpx auto;
}
.bmi, .bmi-stand, .bmi-adv {
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
}
.info-rank{
  width: 90%;
  height: 280rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  padding: 15rpx 10rpx;
  margin: 20rpx auto;
}
.info-rank .body .list{
  display: flex;
  flex-direction: row;
}
.info-rank .body .list .pk{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  left: 85%;
  margin: 8rpx 0;
}
.pk-name{
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  margin: 8rpx 0;
}
.info-frdpk{
  width: 90%;
  height: 340rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  padding: 15rpx 10rpx;
  margin: 20rpx auto;
  z-index: 0;
}
.info-frdpk .body .frdpk-tips{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  text-align: center;
  align-content: center;
}
.info-frdpk .body .frdpk-tips .tips-1{
  color: #000;
  font-size: 32rpx;
  font-weight: bold;
}
.info-frdpk .body .frdpk-tips .tips-2{
  color: #000;
  font-size: 25rpx;
  font-weight: bold;
  margin-top: 7rpx;
}
.info-frdpk .body input{
  width: 90%;
  background: #e9e9e9;
  line-height: 45rpx;
  font-size:  30rpx;
  text-align: center;
  margin: 10rpx auto;
  padding: 8rpx 0;
  border-radius: 20rpx; 
}
.info-frdpk .body .pkconfirm{
  width: 90%;
  color: #fff;
  background: #e90000;
  border-radius: 20rpx; 
  padding: 10rpx 0;
  margin: 10rpx auto;
  font-size: 30rpx;
  text-align: center;
}
.info-frdpk image{
  width: 240rpx;
  height: 240rpx;
  margin: auto 0;
}

/* PK功能详情 */
.pkinfo{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.35);
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 888;
}
.pk-title{
  width: 90%;
  display: flex;
  flex-direction: row;
  background: #e90000;
  border-radius: 20rpx;
  text-align: center;
  padding: 20rpx 0;
  margin: 0 auto;
  justify-content: space-around;
}
.pk-title .name{
  width: 45%;
  color: #fff;
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  margin: auto 0;
}
.pk-title .vs{
  width: 50rpx;
  height: 50rpx;
  margin: auto 20rpx;
}
.pk-body{
  width: 90%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  position: absolute;
  bottom: 30rpx;
  left: 5%;
  padding: 25rpx 0;
}
.pk-body .body{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 25rpx 0;
}
.pk-body .body .score-s{
  width: 30%;
  color: #808080;
  font-size: 32rpx;
  text-align: center;
  margin-left: 30rpx;
}
.pk-body .body .item{
  width: 40%;
  color: #000;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}
.pk-body .body .score-o{
  width: 30%;
  color: #808080;
  font-size: 32rpx;
  text-align: center;
  margin-right: 30rpx;
}
.pk-body .line{
  width: 93%;
  height: 3rpx;
  background: #e4e4e4;
  margin: 0 auto;
}
/* 底部版权 */
.copyright{
  width: 100%;
  display: flex;
  text-align: center;
  margin: 15rpx auto;
}
.copyright text{
  color: #a1a1a1;
  font-size: 22rpx;
  margin: 0 auto;
}