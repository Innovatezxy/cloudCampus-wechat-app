Page{
  background: #ebebeb;
}
.choose{  
  width: 100%; 
  background: #fff;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  z-index: 999;
}  
.choose-list{  
  font-size: 35rpx;
  display: inline-block;
  width: 50%;
  color: #000;
  border-bottom: 2rpx solid #fff;
}  
.on{ 
  font-size: 35rpx;
  color: #048280;
  border-bottom: 3rpx solid #048280;
}  
.swiper-box{
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.body{
  width: 100%;
  height: 88%;
  display: flex;
  flex-direction: column;
}
.page{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  width: 90%;
  background: #afe56e;
  display: flex;
  flex-direction: column;
  border-radius: 15rpx;
  margin: 20rpx auto;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
} 
.notice{
  margin: 10rpx auto;
}
.top-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 5rpx 0;
  justify-content: space-around;
}
.table_title{
  color: #013ee6;
  font-size: 28rpx;
  margin: 5rpx auto;
}
.timetable{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 15rpx 0;
  justify-content: space-around;
  font-size: 30rpx;
}
.area_time{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.area{
  display: flex;
  flex-direction: column;
  color: #9c0000;
  font-size: 32rpx;
}
.area_name{
  color: #000;
  font-size: 28rpx;
  margin: 10rpx uato;
}
.ride_tip{
  color: #000;
  font-size: 25rpx;
  margin: 10rpx auto;
}
.newthing{
  color: #a1a1a1;
  font-size: 30rpx;
  margin: 15rpx auto;
}
.none{
  width: 90%;
  background: #fff;
  border: 1rpx solid #cfcfcf;
  border-radius: 15rpx;
  margin: 15rpx auto;
  font-size: 30rpx;
  text-align: center;
  padding: 10rpx;
}
.new{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.details{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.time{
  width: fit-content;
  display: flex;
  background: rgb(206, 206, 206);
  border-radius: 15rpx;
  text-align: center;
  padding: 5rpx 10rpx;
  margin: 15rpx auto;
}
.time text{
  color: #fff;
  font-size: 25rpx;
}
.details .name{
  color: #000;
  font-size: 30rpx;
  margin: auto 5rpx;
}
.text{
  width: 90%;
  display: flex;
  flex-direction: row;
  margin: 0 20rpx;
}
.text .content{
  max-width: 65%;
  background: #fff;
  border-radius: 15rpx;
  word-break: break-all;
  word-wrap: break-word;
  padding: 20rpx;
  color: #000;
  font-size: 30rpx;
  margin: auto 10rpx;
}
.img{
  width: 90%;
  display: flex;
  flex-direction: row;
  margin: 0 20rpx;
}
.img image{
  width: 40%;
  height: 40%;
  border-radius: 15rpx;
}
.publish{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  background: #f5f4f6;
  position: fixed;
  bottom: 0;
  justify-content: space-around;
}
.post_pic{
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.publish input{
  background: #fff;
  width: 80%;
  line-height: 60rpx;
  font-size: 32rpx;
  text-align: center;
  padding: 15rpx 0;
  margin: auto;
  border-radius: 15rpx;
  border: 2rpx solid #dfdfdf;
}
.bottom-line{
  width: 100%;
  height: 2rpx;
  background: #a1a1a1;
  position: fixed;
  bottom: 90rpx;
}
/* 授权登录 */
.authorize_bg{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.495);
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  z-index: 999;
}
.authorize{
  width: 95%;
  background: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  position: fixed;
  padding: 35rpx auto;
}
.authorize image{
  width: 95%;
  height: 100%;
  box-shadow: 0 0 5rpx 5rpx rgba(150, 150, 150, 0.233);
  border-radius: 25rpx;
  margin: 25rpx auto;
}
.authorize .button{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.authorize .confirm{
  width: 40%;
  font-size: 32rpx;
  line-height: 60rpx;
  padding: 15rpx 0;
  color: #fff;
  background-color: #49c265;
  margin: 20rpx auto;
}
.authorize .cancel{
  width: 40%;
  font-size: 32rpx;
  line-height: 60rpx;
  padding: 15rpx 0;
  color: #49c265;
  background-color: #ededed;
  margin: 20rpx auto;
}
.tips{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 35rpx auto;
  justify-content: flex-start;
}
.tips text{
  display: block;
  color: #000;
  font-size: 28rpx;
  overflow: hidden;
}